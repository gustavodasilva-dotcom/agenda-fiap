@using Agenda.WebUI.Models
@inject DialogService DialogService

<RadzenTemplateForm TItem="EventoModel" Data="@model" Submit=@OnSubmit>
    <RadzenStack Gap="1rem">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Wrap="FlexWrap.Wrap">
            <RadzenLabel Text="Title" Style="width: 4rem;" />
            <RadzenTextBox @bind-Value="@model.Nome" Name="Text" Style="width: 12rem;" />
            <RadzenRequiredValidator Component="Nome" Text="Title is required" />
        </RadzenStack>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Wrap="FlexWrap.Wrap">
            <RadzenLabel Text="Start" Style="width: 4rem;" />
            <RadzenDatePicker @bind-Value="@model.DataEventoInicio" Name="Start" ShowTime="true" Style="width: 12rem;" />
            <RadzenRequiredValidator Component="DataInicial" Text="Start is required" />
        </RadzenStack>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Wrap="FlexWrap.Wrap">
            <RadzenLabel Text="End" Style="width: 4rem;" />
            <RadzenDatePicker Name="End" @bind-Value="@model.DataEventoFinal" ShowTime="true" Style="width: 12rem;" />
            <RadzenRequiredValidator Component="DataFinal" Text="End is required" />
        </RadzenStack>
        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End">
            <RadzenButton ButtonType="ButtonType.Submit" Text="Save" />
        </RadzenStack>
    </RadzenStack>
</RadzenTemplateForm>

@code {
    [Parameter]
    public DateTime DataInicial { get; set; }

    [Parameter]
    public DateTime DataFinal { get; set; }

    EventoModel model = new EventoModel();

    protected override void OnParametersSet()
    {
        model.DataEventoInicio = DataInicial;
        model.DataEventoFinal = DataFinal;
    }

    void OnSubmit(EventoModel model)
    {
        DialogService.Close(model);
    }
}